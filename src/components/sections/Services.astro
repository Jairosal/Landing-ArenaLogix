---
import { Image, getImage } from "astro:assets";
import desSoft from "../../assets/des-soft-personalizado.png";
import consultoriaImg from "../../assets/consultoria-tecno.png";
import desApp from "../../assets/des-apli-web-mov.png";
import fondoBlanco from "../../assets/fondo-blanco.png";

const optimizedBackground = await getImage({
  src: fondoBlanco,
  format: "webp",
});
---

<section
  id="services"
  class="relative bg-cover bg-top"
  style={`background-image: url('${optimizedBackground.src}');`}
>
  <div class="relative z-10 max-w-7xl mx-auto px-6 pt-24 md:pt-64 pb-32">
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 justify-items-center"
    >
      <Image
        src={desSoft}
        alt="Desarrollo de Software Personalizado - Soluciones a medida para tu empresa"
        class="w-full max-w-xs sm:max-w-sm"
        loading="lazy"
        format="webp"
      />
      <Image
        src={consultoriaImg}
        alt="Consultoría Tecnológica - Asesoramiento experto para tu transformación digital"
        class="w-full max-w-xs sm:max-w-sm"
        loading="lazy"
        format="webp"
      />
      <Image
        src={desApp}
        alt="Desarrollo de Aplicaciones Web y Móviles - Apps intuitivas y escalables"
        class="w-full max-w-xs sm:max-w-sm sm:col-span-2 sm:mx-auto lg:col-span-1"
        loading="lazy"
        format="webp"
      />
    </div>
  </div>
</section>
