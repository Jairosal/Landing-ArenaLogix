---
import Button from "../ui/Button.astro";
---

<footer class="relative font-body overflow-hidden bg-white">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
        <img
            src="/assets/bg-footer.png"
            alt=""
            class="w-full h-full object-cover -mt-8"
            loading="lazy"
            decoding="async"
        />
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-6 py-12 lg:py-16">
        <div
            class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-start"
        >
            <div class="flex justify-center lg:justify-start">
                <img
                    src="/assets/transfor-ideas-2.png"
                    alt="ArenaLogix - Transformamos tus ideas en realidad digital"
                    class="w-full max-w-md lg:max-w-lg h-auto object-contain"
                    loading="lazy"
                    decoding="async"
                />
            </div>

            <div
  class="grid grid-cols-2 gap-6 text-sm 
         max-w-md mx-auto 
         lg:max-w-none lg:ml-auto lg:justify-end"
>

                <!-- Column 1: AYUDA + NOSOTROS -->
                <div class="space-y-6">
                    <div>
                        <h3 class="font-bold text-gray-700 mb-2">AYUDA</h3>
                        <ul class="space-y-0.5 text-gray-700">
                            <li>
                                <a
                                    href="#cotizar"
                                    class="hover:text-brand-primary transition-colors"
                                    >Contáctenos</a
                                >
                            </li>
                            <li>
                                <a
                                    href="#"
                                    class="hover:text-brand-primary transition-colors"
                                    >Consulta Problemas</a
                                >
                            </li>
                            <li>
                                <a
                                    href="#"
                                    class="hover:text-brand-primary transition-colors"
                                    >Preguntas frecuentes</a
                                >
                            </li>
                        </ul>
                    </div>
                    <div>
                        <h3 class="font-bold text-gray-700 mb-2">NOSOTROS</h3>
                        <ul class="space-y-0.5 text-gray-700">
                            <li>
                                <a
                                    href="#"
                                    class="hover:text-brand-primary transition-colors"
                                    >Nuestra historia</a
                                >
                            </li>
                            <li>
                                <a
                                    href="#"
                                    class="hover:text-brand-primary transition-colors"
                                    >Reseñas</a
                                >
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="space-y-6">
                    <div>
                        <h3 class="font-bold text-gray-700 mb-2">
                            INFORMACIÓN
                        </h3>
                        <ul class="space-y-0.5 text-gray-700">
                            <li>
                                <a
                                    href="#"
                                    class="hover:text-brand-primary transition-colors"
                                    >Consultas comerciales</a
                                >
                            </li>
                            <li>
                                <a
                                    href="#"
                                    class="hover:text-brand-primary transition-colors"
                                    >Términos y condiciones</a
                                >
                            </li>
                            <li>
                                <a
                                    href="#"
                                    class="hover:text-brand-primary transition-colors"
                                    >Políticas de privacidad</a
                                >
                            </li>
                        </ul>
                    </div>
                    <div class="pt-4">
                        <Button 
                            href="https://web.whatsapp.com/"
                            variant="primary"
                            size="md"
                        >
                            Chatear
                        </Button>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-12 text-center">
            <p
                class="text-xl md:text-2xl lg:text-4xl font-heading font-bold text-gray-800 tracking-wide"
            >
                ArenaLogix
            </p>
        </div>
    </div>
</footer>
